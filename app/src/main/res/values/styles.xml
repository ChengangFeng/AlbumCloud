<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="MyMatisseTheme" parent="Matisse.Dracula">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbar">@style/Toolbar.Dracula</item>
        <item name="album.dropdown.title.color">@color/dracula_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/dracula_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/colorPrimaryDark</item>
        <item name="album.emptyView">@drawable/ic_empty_dracula</item>
        <item name="album.emptyView.textColor">@color/dracula_album_empty_view</item>
        <item name="item.placeholder">@color/colorPrimaryDark</item>
        <item name="item.checkCircle.backgroundColor">@color/colorOrange</item>
        <item name="item.checkCircle.borderColor">@color/dracula_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/colorPrimary</item>
        <item name="bottomToolbar.bg">@color/colorPrimary</item>
        <item name="bottomToolbar.preview.textColor">@color/dracula_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/colorOrange</item>
        <item name="preview.bottomToolbar.back.textColor">@color/dracula_preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorOrange</item>
        <item name="android:listPopupWindowStyle">@style/Popup.Album</item>
        <item name="listPopupWindowStyle">@style/Popup.Album</item>
        <item name="capture.textColor">@color/dracula_capture</item>
    </style>

    <style name="Popup.Album" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>
</resources>
